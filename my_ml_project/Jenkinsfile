pipeline {
    agent any

    environment {
        PYTHON_VERSION = '3.10'  // Set your Python version
        VENV = 'venv'
        OUTPUT_FILE = 'output.txt'  // Specify the desired output file
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Set Up Python') {
            steps {
                script {
                    // Set up virtual environment
                    bat "python -m venv ${VENV}"
                    
                    // Activate virtual environment
                    bat "${VENV}\\Scripts\\activate"
                    
                    // Install dependencies
                    bat "pip install -r requirements.txt"
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    // Run tests using pytest
                    bat "pytest tests/"
                }
            }
        }

        stage('Run ML Script') {
            steps {
                script {
                    // Run your ML script
                    bat "python src/my_ml_script.py > ${OUTPUT_FILE}"
                }
            }
        }

        stage('Deployment') {
            steps {
                script {
                    // Upload the output file to a desired location (e.g., S3, FTP, etc.)
                    // This is just an example; you may need to replace this with your actual deployment step.
                    bat "cp ${OUTPUT_FILE} D:/LAB7/my_ml_project/${OUTPUT_FILE}"
                }
            }
        }
    }

    post {
        always {
            // Deactivate virtual environment after execution
            bat "${VENV}\\Scripts\\deactivate"
        }
    }
}



