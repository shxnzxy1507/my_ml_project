pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                script {
                    // Checkout the code from your Git repository
                    checkout scm
                }
            }
        }

        stage('Install dependencies') {
            steps {
                script {
                    // Assuming you have a virtual environment
                    sh 'python -m venv venv'
                    sh 'source venv/bin/activate'
                    sh 'pip install numpy scikit-learn'
                }
            }
        }

        stage('Run script') {
            steps {
                script {
                    // Navigate to the src directory
                    dir('my_ml_project/src') {
                        sh 'python my_ml_script.py'
                    }
                }
            }
        }
    }

    post {
        always {
            script {
                // Clean up, deactivate virtual environment
                sh 'deactivate || true'
            }
        }
    }
}



























