pipeline {
    agent any

    environment {
        PYTHON_VERSION = '3.8'  // Set your Python version
        VENV = 'venv'
        OUTPUT_FILE = 'output.txt'  // Specify the desired output file
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Set Up Python') {
            steps {
                script {
                    // Set up virtual environment
                    sh "python${PYTHON_VERSION} -m venv ${VENV}"
                    // Activate virtual environment
                    sh "source ${VENV}/bin/activate"
                    // Install dependencies
                    sh "pip install -r requirements.txt"
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    // Run tests using pytest
                    sh "pytest tests/"
                }
            }
        }

        stage('Run ML Script') {
            steps {
                script {
                    // Run your ML script
                    sh "python src/my_ml_script.py > ${OUTPUT_FILE}"
                }
            }
        }

        stage('Deployment') {
            steps {
                script {
                    // Upload the output file to a desired location (e.g., S3, FTP, etc.)
                    // This is just an example; you may need to replace this with your actual deployment step.
                    sh "cp ${OUTPUT_FILE} D:/LAB7/${OUTPUT_FILE}"

                }
            }
        }
    }

    post {
        always {
            // Deactivate virtual environment after execution
            sh "deactivate"
        }
    }
}

